<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.runapp.runapp.AcercaDeActivity"
    tools:showIn="@layout/activity_acerca_de">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#ff4b1a"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Universidad Nacional de Costa Rica"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:textColor="#ffffff"
            android:textStyle="normal|bold"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Aarón Camacho Leandro"
            android:id="@+id/textView9"
            android:layout_marginTop="37dp"
            android:textStyle="normal"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Marco Vinicio Cambronero Fonseca"
            android:id="@+id/textView10"
            android:textStyle="normal"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bryan Rodríguez Díaz"
            android:id="@+id/textView11"
            android:textStyle="normal"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curso:"
            android:id="@+id/textView14"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="normal|bold"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diseño y Programación de \n     Plataformas Móviles"
            android:id="@+id/textView15"
            android:textColor="#ffffff"
            android:textStyle="normal"
            android:textSize="18dp"
            android:paddingTop="10dp"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView14" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView4"
            android:src="@drawable/runappid"
            android:layout_below="@+id/textView15"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acerca de"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:textSize="36dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
