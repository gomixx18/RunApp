<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.runapp.runapp.Inicio">

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Comenzar Recorrido"
        android:id="@+id/btnStartRecorrido"
        android:layout_marginTop="105dp"
        android:background="#0014f1"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtBienvenida"
        android:layout_alignStart="@+id/btnCambiarDatos"
        android:layout_alignEnd="@+id/btnCambiarDatos" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Ver Recorridos"
        android:id="@+id/btnVerRecorridos"
        android:layout_alignTop="@+id/btnStartRecorrido"
        android:layout_alignEnd="@+id/btnStartRecorrido"
        android:layout_marginTop="105dp"
        android:background="#0014f1"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/btnStartRecorrido" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Cambiar Datos Personales"
        android:id="@+id/btnCambiarDatos"
        android:background="#0014f1"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/btnVerRecorridos"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtBienvenida"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
