<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.runapp.runapp.ResultadosActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultados de la Sesion"
        android:id="@+id/txtBienvenida"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#000000"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="6dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Iniciar nueva Sesion"
        android:id="@+id/button4"
        android:layout_marginBottom="66dp"
        android:background="#0014f1"
        android:focusable="true"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/txtBienvenida"
        android:layout_alignStart="@+id/txtBienvenida"
        android:layout_marginTop="26dp"
        android:background="#fd2901"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.5"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="32dp"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km"
            android:id="@+id/textView4"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView3"
            android:layout_alignEnd="@+id/textView3"
            android:textStyle="normal|italic"
            android:textSize="18dp"
            android:textAlignment="viewEnd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:40:25"
            android:id="@+id/textView5"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="37dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/ratingBar"
            android:numStars="5"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:rating="4" />

        <ImageButton
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:id="@+id/btnImgMapa"
            android:src="@drawable/map"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver mi recorrido: "
            android:id="@+id/textView6"
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/textView3" />

    </RelativeLayout>
</RelativeLayout>
