<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.runapp.runapp.Tips">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:background="#fd2901"
        android:layout_alignParentTop="true"
        android:src="@drawable/na" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_alignBottom="@+id/imageButton"
        android:weightSum="1"
        android:background="#fd2901"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="50dp"
            android:layout_height="37dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Volver  al Inicio"
            android:id="@+id/textView19"
            android:textColor="#ffffff"
            android:textStyle="normal|bold"
            android:textSize="20dp"
            android:enabled="true"
            android:layout_weight="0.44"
            android:layout_alignParentTop="true"
            android:paddingTop="12dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tips"
        android:id="@+id/textView18"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="24dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_alignEnd="@+id/linearLayout2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView18"
        android:layout_alignEnd="@+id/textView18"
        android:id="@+id/relativeLayout3"></RelativeLayout>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Comenzar Recorrido"
        android:id="@+id/button6"
        android:background="#0014f1"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/relativeLayout3"
        android:layout_marginStart="419dp" />

</RelativeLayout>
