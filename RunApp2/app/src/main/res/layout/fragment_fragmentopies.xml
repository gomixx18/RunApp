<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.runapp.runapp.Fragmentopies"
    android:visibility="visible"
    android:background="#FFFFFF">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:text="Tipos de tennis"
        android:id="@+id/tiiposPP"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/pronador" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Tipos de Pisada"
        android:id="@+id/pronador"
        android:layout_alignParentTop="true"
        android:layout_gravity="right|top" />


    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/videoView"
        android:visibility="invisible"
        android:layout_below="@+id/tiiposPP"
        android:layout_alignParentStart="true" />



</RelativeLayout>
