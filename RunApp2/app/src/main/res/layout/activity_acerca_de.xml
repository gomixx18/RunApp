<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.runapp.runapp.AcercaDeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#ff4b1a"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Universidad Nacional"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:textColor="#ffffff"
            android:textStyle="normal|bold"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Integrantes:"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textStyle="normal|bold"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Aaron Camacho Leandro"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/textView7"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:textSize="18dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Marco Vinicio Cambronero Fonseca"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:textStyle="normal"
            android:textSize="18dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bryan Rodríguez Díaz"
            android:id="@+id/textView11"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:textStyle="normal"
            android:textSize="18dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplicación:"
            android:id="@+id/textView12"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="6dp"
            android:textStyle="normal|bold"
            android:textSize="18dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RunApp"
            android:id="@+id/textView13"
            android:layout_marginLeft="6dp"
            android:textStyle="normal"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView12"
            android:layout_alignEnd="@+id/textView12"
            android:paddingTop="10dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/runappicon"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curso:"
            android:id="@+id/textView14"
            android:layout_marginRight="18dp"
            android:layout_alignTop="@+id/textView12"
            android:layout_alignEnd="@+id/textView9"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diseño y Programación de Plataformas Moviles"
            android:id="@+id/textView15"
            android:layout_alignTop="@+id/textView13"
            android:layout_alignStart="@+id/textView14"
            android:textColor="#ffffff"
            android:textStyle="normal"
            android:textSize="18dp"
            android:paddingTop="10dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acerca De:"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/relativeLayout2"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="24dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Volver al Menú Principal"
        android:id="@+id/button5"
        android:background="#0014f1"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="16dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>
