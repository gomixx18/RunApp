<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.runapp.runapp.VerRecorridos">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/tablaRecorridos">


        <TableRow android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fila1">

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:textSize="16dp"
                android:paddingBottom="16dp"
                android:text="Fecha"
                android:textColor="#ffffff"
                android:background="#ff4b1a"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textStyle="bold"
                android:autoText="false"
                android:id="@+id/txtFecha">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:textSize="16dp"
                android:paddingBottom="16dp"
                android:text="Distancia"
                android:textColor="#ffffff"
                android:background="#ff4b1a"
                android:layout_marginStart="5dp"
                android:editable="false"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/txtDistancia">
            </TextView>

            <TextView
                android:text="Tiempo"
                android:textColor="#ffffff"
                android:background="#ff4b1a"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="16dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="16dp"
                android:layout_weight="1"
                android:editable="false"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:id="@+id/txtTiempo">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:textSize="16dp"
                android:paddingBottom="16dp"
                android:text="ValoraciÃ³n"
                android:textColor="#ffffff"
                android:background="#ff4b1a"
                android:layout_marginStart="5dp"
                android:editable="false"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:autoText="false"
                android:id="@+id/txtValoracion">
            </TextView>

        </TableRow>





        <TableRow android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fila2">

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:textSize="16dp"
                android:paddingBottom="16dp"
                android:text="13/04/2016"
                android:textColor="#000000"
                android:layout_marginStart="5dp"
                android:editable="false"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:autoText="false"
                android:id="@+id/fecha1">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:textSize="16dp"
                android:paddingBottom="16dp"
                android:text="15 km"
                android:textColor="#000000"
                android:layout_marginStart="5dp"
                android:editable="false"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/distancia1">
            </TextView>

            <TextView
                android:text="00:46:17"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="16dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="16dp"
                android:layout_weight="1"
                android:editable="false"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:id="@+id/tiempo1">
