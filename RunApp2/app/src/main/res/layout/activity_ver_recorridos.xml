                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:textSize="16dp"
                android:paddingBottom="16dp"
                android:text="Fecha"
                android:textColor="#ffffff"
                android:background="#ff4b1a"
